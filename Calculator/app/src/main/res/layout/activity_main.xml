<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:gravity="right"
        android:layout_above="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#78178a7a"
        android:textSize="15dp"
        android:padding="5dp"
        android:paddingLeft="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:gravity="right"
        android:layout_alignLeft="@+id/btn_delete"
        android:layout_alignStart="@+id/btn_delete"
        android:layout_above="@+id/btn_delete"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:padding="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp" />

    <Button
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:text="@string/CE"
        android:id="@+id/btn_delete"
        android:layout_row="0"
        android:layout_column="3"
        android:onClick="getDelete"
        android:layout_above="@+id/gridnumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:text="@string/AC"
        android:id="@+id/btn_clear"
        android:layout_row="4"
        android:layout_column="0"
        android:onClick="getClear"
        android:layout_alignTop="@+id/btn_delete"
        android:layout_toRightOf="@+id/btn_delete"
        android:layout_toEndOf="@+id/btn_delete" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridnumber"
        android:gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/siete"
            android:id="@+id/btn7"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="getSeven" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/ocho"
            android:id="@+id/btn8"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="getEight" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/nueve"
            android:id="@+id/btn9"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="getNine" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/suma"
            android:id="@+id/btnsum"
            android:layout_row="1"
            android:layout_column="3"
            android:onClick="getAdd" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/cuatro"
            android:id="@+id/btn4"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="getFour" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/cinco"
            android:id="@+id/btn5"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="getFive" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/seis"
            android:id="@+id/btn6"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="getSix" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/resta"
            android:id="@+id/btnres"
            android:layout_row="2"
            android:layout_column="3"
            android:onClick="getSub" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/uno"
            android:id="@+id/btn1"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="getOne" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/dos"
            android:id="@+id/btn2"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="getTwo" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/tres"
            android:id="@+id/btn3"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="getThree" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/multiplicacion"
            android:id="@+id/btnmul"
            android:layout_row="3"
            android:layout_column="3"
            android:onClick="getMul" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/cero"
            android:id="@+id/btn0"
            android:layout_row="4"
            android:layout_column="1"
            android:onClick="getCero"
            android:clickable="false" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/igual"
            android:id="@+id/btnigual"
            android:layout_row="4"
            android:layout_column="2"
            android:onClick="getEquals" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/division"
            android:id="@+id/btndiv"
            android:layout_row="4"
            android:layout_column="3"
            android:onClick="getDiv" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Calculadora"
        android:id="@+id/textView2"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_above="@+id/textView2"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

</RelativeLayout>
